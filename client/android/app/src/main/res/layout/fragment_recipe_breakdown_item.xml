<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/instructionVideo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="@color/black"/>

    <TextView
        android:id="@+id/stepDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/instructionVideo"
        app:layout_constraintEnd_toEndOf="@id/instructionVideo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Everybody wash your hands. Dinner will be ready shortly. So what you gotta do is cook everything beautifully and then put it all together once it's ready and BAM you're done."/>

</androidx.constraintlayout.widget.ConstraintLayout>